<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Inventory Configuration-->
    <record id="sh_barcode_label_inventory_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']" position="inside">
                <h2 groups="sh_all_in_one_barcode_label.group_product_barcode_label_template">Product Barcode Label Configuration</h2>
                <div class="row mt16 o_settings_container" groups="sh_all_in_one_barcode_label.group_product_barcode_label_template">
                    <div class="col-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sh_stock_quantity_configuration" />
                            <br />
                            <field name="sh_stock_quantity_configuration" class="oe_inline" />
                        </div>
                        <div class="o_setting_left_pane"></div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <!--Sale Configuration-->
    <record id="sh_barcode_label_sale_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <h2 groups="sh_all_in_one_barcode_label.group_product_barcode_label_template">Product Barcode Label Configuration</h2>
                <div class="row mt16 o_settings_container" groups="sh_all_in_one_barcode_label.group_product_barcode_label_template">
                    <div class="col-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sh_sale_quantity_configuration" />
                            <br />
                            <field name="sh_sale_quantity_configuration" class="oe_inline" />
                        </div>
                        <div class="o_setting_left_pane"></div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <!--Purchase Configuration-->
    <record id="sh_barcode_label_purchase_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2 groups="sh_all_in_one_barcode_label.group_product_barcode_label_template">Product Barcode Label Configuration</h2>
                <div class="row mt16 o_settings_container" groups="sh_all_in_one_barcode_label.group_product_barcode_label_template">
                    <div class="col-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sh_purchase_quantity_configuration" />
                            <br />
                            <field name="sh_purchase_quantity_configuration" class="oe_inline" />
                        </div>
                        <div class="o_setting_left_pane"></div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>