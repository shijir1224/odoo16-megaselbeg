<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_ebarimt" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ebarimt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')][@data-key='point_of_sale']" position="inside">
                <h2>EBarimt</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="ebarimt_endpoint_url"/>
                                <div class="content-group mt16">
                                    <field name="ebarimt_endpoint_url" required="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
