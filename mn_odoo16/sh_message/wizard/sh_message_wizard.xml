<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>	
	
	
	<record id="sh_message_wizard" model="ir.ui.view">
		<field name="name">sh.message.wizard</field>
		<field name="model">sh.message.wizard</field>
		<field name="arch" type="xml">
			<form string="Message">
			<sheet>
			<script>
                            $(document).ready(function(){
                            $('.modal-dialog').css({'width': '480px'});
                            $('.oe_form_sheet_width').css({'MAXwidth': '350px'});
                            });
                    </script>			
	        <div class="alert alert-success text-center">
					<field name="name"/>
	        </div>
			
			
				<footer>
					<button string="OK" class="btn-primary" special="cancel" />
				</footer>				
					
				</sheet>
			</form>
		</field>	
	</record>
	
	

	<record id="sh_message_wrong_wizard" model="ir.ui.view">
		<field name="name">sh.message.wizard.wrong</field>
		<field name="model">sh.message.wizard</field>
		<field name="arch" type="xml">
			<form string="Message">
			<sheet>
			<script>
                            $(document).ready(function(){
                            $('.modal-dialog').css({'width': '480px'});
                            $('.oe_form_sheet_width').css({'MAXwidth': '350px'});
                            });
                    </script>			
	        <div class="alert alert-danger text-center">
					<field name="name"/>
	        </div>
			
			
				<footer>
					<button string="OK" class="btn-primary" special="cancel" />
				</footer>				
					
				</sheet>
			</form>
		</field>	
	</record>	

</data>
</odoo>