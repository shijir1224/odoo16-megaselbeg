                    <field name="payment_receivable" groups="base.group_no_one" attrs="{'invisible':[('employee','=',False)]}"/>
                     <field name="payment_receivable_hand" groups="base.group_no_one" attrs="{'invisible':[('employee','=',False)]}"/>
                </field>
        </field>
    </record>  
</odoo>