                <field name="t_partner_id" groups="mw_technic_equipment.group_technic_module_user"/>
				<filter name="gr_technic_id" string="Техникээр" context="{'group_by':'technic_id'}" groups="mw_technic_equipment.group_technic_module_user"/>
                <filter name="gr_technic_setting_id" string="Техникээр тохиргоо" context="{'group_by':'technic_setting_id'}" groups="mw_technic_equipment.group_technic_module_user"/>
