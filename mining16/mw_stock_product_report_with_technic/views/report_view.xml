    <record id="view_technic_equipment_inherit_form" model="ir.ui.view">
        <field name="name">technic.equipment.inherit.form</field>
        <field name="model">technic.equipment</field>
        <field name="inherit_id" ref="mw_technic_equipment.technic_equipment_form"/>
        <field name="arch" type="xml">
            <button name="see_inspections" position="before">
                <button type="object" class="oe_stat_button" icon="fa-money" name="see_stock_move" groups="mw_stock_account.group_stock_view_cost">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="all_cost"/>
                        </span>
                        <span class="o_stat_text">COST STOCK</span>
                    </div>
                </button>
                <button type="object" class="oe_stat_button" icon="fa-money" name="see_account_move" groups="mw_stock_account.group_stock_view_cost">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="all_cost_am"/>
                        </span>
                        <span class="o_stat_text">COST ACCOUNT</span>
                    </div>
                </button>
                <button
                    name="see_parts"
                    type="object" class="oe_stat_button"
                    icon="fa-list-ol" string="Parts">
                </button>
            </button>
