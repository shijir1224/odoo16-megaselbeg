<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model='ir.ui.view' id='electric_record_tree'>
            <field name="name">Electric.Record.Tree</field>
            <field name="model">electric.record</field>
            <field name="arch" type="xml">
                <tree string="Electric.Record">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model='ir.ui.view' id='electric_record_form'>
            <field name="name">Electric.Record.form</field>
            <field name="model">electric.record</field>
            <field name="arch" type="xml">
                <form string="Electric Record form">
                    <sheet>
                    <group col="4">
                    <field name="name"/>
                    
                    </group>
                </sheet>
                </form>
            </field>
        </record>
        <record model='ir.actions.act_window' id='action_electric_record'>
            <field name="name">Цахилгааны хэмжилт бүртгэл</field>
            <field name="res_model">electric.record</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{'search_default_date': 1,'search_default_technic_type': 1}</field> -->
        </record>
</odoo>
